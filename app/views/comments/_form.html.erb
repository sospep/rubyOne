<hr>
<h3> Add a comment </h3>
<%= form_for([@balloon, @balloon.comments.build])  do |f| %>
    <!-- #check for errors  -->
  

    <p>
    <%= f.label :username %><br>
    <%= f.text_field(:username,{:class => 'form-control'}) %>
    </p>
    
    <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body,{:class => 'form-control'}) %>
    </p>
    <p>
    <%= f.submit(:class => 'btn btn-primary') %>
    </p>
<% end %>